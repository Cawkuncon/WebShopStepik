@model List<Product>
@{
    int i = 1;
}

<div class="row">
    <div class="col-3">
        @await Html.PartialAsync("Index")
    </div>
    <div class="col-9">
        <h2>Список продуктов</h2>
<a asp-controller="Admin" asp-action="AddProduct">Добавить продукт</a>
<br>
<br />
<table>
    <tr>
        <td>№</td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;Наименование</td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;Цена</td>
        <td></td>
        <td></td>
    </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>            
                        @i
                    </td>   
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;@item.Name</td>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;@item.Cost</td>
                    <td><a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@item.Id" style="margin-left: 50px;">Редактировать</a></td>
                    <td><a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@item.Id" style="margin-left: 50px;">Удалить</a></td>
                </tr>
                i += 1;
            }
</table>
    </div>
</div>

