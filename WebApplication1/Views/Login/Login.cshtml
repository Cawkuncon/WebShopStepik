@model UserInfo
<div class="text-center">
	<h2>Вход</h2>
	<form asp-controller="Login" asp-action="Login">
		<div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
		<input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
		<div>
		<input asp-for="Name" placeholder="Логин">
		<span asp-validation-for="Name"></span>
		</div>
		<br />
		<br />
		<div>
		<input asp-for="Password" type="password" placeholder="Пароль">
		<span asp-validation-for="Password"></span>
		</div>
		<br />
		<br />
		<input type="checkbox" asp-for="SaveUser" id="save" />
		<label for="save">Запомнить пользователя</label>
		<br />
		<br />
		<button type="submit" class="btn btn-info">Войти</button>
		<br /><br />
	</form>
		<a class="btn btn-secondary" asp-area="" asp-controller="Login" asp-action="Login" asp-route-ReturnUrl="@Model.ReturnUrl">Регистрация</a>
</div>
