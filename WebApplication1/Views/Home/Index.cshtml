@{
    ViewData["Title"] = "Home Page";
}

@model List<Product>

    <div class="row">
        <div class="col-md-3 my-3">
                <form method="post">
                    <div class="d-flex my-1">
                        <div class="input-group mb-3">
                          <input type="text" class="form-control" placeholder="Поиск по названию" aria-label="Поиск по названию" aria-describedby="basic-addon2" name="search">
                          <div class="input-group-append">
                              <button class="btn btn-outline-secondary" type="submit" asp-controller="Home" asp-action="Search"><i class="fa-solid fa-magnifying-glass"></i></button>
                          </div>
                        </div>
                    </div>
                </form>
        </div>
        <div class="col-md-9 my-3">
            <div class="row">
                <div class="col-md-9 w-100">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                      <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                      </div>
                      <div class="carousel-inner">
                        <div class="carousel-item active">
                          <img src="https://gdr.one/simg/600x220/5094bd/fff?text=Picture" class="d-block w-100" alt="картинка 1">
                        </div>
                        <div class="carousel-item">
                          <img src="https://gdr.one/simg/600x220/5094bd/fff?text=Picture" class="d-block w-100" alt="картинка 2">
                        </div>
                        <div class="carousel-item">
                          <img src="https://gdr.one/simg/600x220/5094bd/fff?text=Picture" class="d-block w-100" alt="картинка 3">
                        </div>
                      </div>
                      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Предыдущий</span>
                      </button>
                      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Следующий</span>
                      </button>
                    </div>
                </div>
            </div>
            <div class="row my-2 px-2 d-flex justify-content-around">
            @foreach (var product in Model)
            {
                            <div class="col-3 mx-1 mb-3 py-0 px-0 card-main">
                                <div class="card h-100 shadow">
                                    <div class="card-body d-flex flex-column">
                                        <a href="/product/index/@product.Id"><img class="card-img-top" src="https://adpass.ru/wp-content/uploads/2022/02/1200px-YAndeks.svg.png"></a>
                                        <h3>@product.Name</h3>
                                        <h4>Цена: @product.Cost &#8381</h4>
                                        <div>
                                             <p id="1" class="cl1">@product.Description</p>
                                        </div>
                                            <div class="d-flex mt-auto">
                                                <div class="d-inline-flex">
                                                    <a href="/basket/adds?productId=@product.Id" class="btn"><i class="fa-solid fa-cart-shopping fa-2x"></i></a>
                                                </div>
                                                    <div class="d-inline-flex mx-1">
                                                    @if (!product.Comparsion)
                                                    {
                                                        <a href="/home/addToComparsion?productId=@product.Id" class="btn btn-info text-center">Сравнение</a>
                                                    }
                                                    else
                                                    {
                                                         <a href="/home/addToComparsion?productId=@product.Id" class="btn btn-info disabled">Сравнение</a>
                                                    }
                                               </div>
                                               <div class="d-inline-flex">
                                                    @if (!product.Favorite)
                                                    {
                                                        <a href="/home/AddToFavorite?productId=@product.Id" class="btn"><i class="fa-regular fa-heart fa-2x"></i></a>
                                                    }
                                                    else
                                                    {
                                                         <a href="/home/DeleteFromFavoriteIndex?productId=@product.Id" class="btn"><i class="fa-solid fa-heart fa-red-heart fa-2x"></i></a>
                                                    }
                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
            }
            </div>
        </div>
    </div>