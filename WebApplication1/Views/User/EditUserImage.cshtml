@using OnlineShop.DB.Models;
@model User
<h2>Выберите изображение для @Model.UserName</h2>
<form method="post" enctype="multipart/form-data">
    <div>
        <label>Загрузить изображение</label>
        <input type="file" name="formFile"/>
    </div>
    <hr />
    <div>
        <button type="submit" asp-area="" asp-controller="User" asp-action="EditUserImage" asp-route-Name="@Model.UserName" class="btn btn-success">Изменить</button>
    </div>
</form>
