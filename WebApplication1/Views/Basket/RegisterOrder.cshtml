@{
    ViewData["Title"] = "Home Page";
}

@model OrderViewModel


<form method="post">
    @if (ViewBag.user != null)
    {
        <label asp-for="Name">Введите имя и фамилию</label>
        <input asp-for="Name" value="@ViewBag.user.Name" disabled/>
        <span asp-validation-for="Name"></span>
        <br />
        <br />
        <label asp-for="Number">Введите номер телефона</label>
        <input asp-for="Number" value="@ViewBag.user.Number" disabled>
        <span asp-validation-for="Number"></span>
        <br />
        <br />
        <label asp-for="Email">Почта</label>
        <input asp-for="Email" value="@ViewBag.user.Email" disabled>
        <span asp-validation-for="Email" ></span>
    }
    else
    {
        <label asp-for="Name">Введите имя и фамилию</label>
        <input asp-for="Name" placeholder="Иван Иванов" />
        <span asp-validation-for="Name"></span>
        <br />
        <br />
        <label asp-for="Number">Введите номер телефона</label>
        <input asp-for="Number" placeholder="8-888-888-88-88">
        <span asp-validation-for="Number"></span>
        <br />
        <br />
        <label asp-for="Email">Почта</label>
        <input asp-for="Email">
        <span asp-validation-for="Email"></span>
    }
    <br />
    <br />
    <label asp-for="Address">Адрес</label>
    <input asp-for="Address">
    <span asp-validation-for="Address"></span>
    <br />
    <br />
    <label for="Comments">Комментарии</label>
    <input name="Comments">
    <span asp-validation-for="Comments"></span>
    <br />
    <br />
    <input asp-for="Status" type="hidden"  value="0">
    <button type = "submit" class="btn btn-primary" asp-controller="Basket" asp-action="Success">Оформить заказ</button>
</form>

<br>

<div class="row">
    <div class="col-12">Ваш заказ</div>
</div>
<div class="row">
    <div class="col-3">Наименование</div>
    <div class="col-3">Описание</div>
    <div class="col-3">Количество</div>
    <div class="col-3">Стоимость</div>
    @foreach (var product in ViewBag.Products)
    {
            <div class="col-3">
                <a href="/product/index/@product.Id">@product.Name</a>
            </div>
            <div class="col-3">
                <p>@product.Description</p>
            </div>
            <div class="col-3">
            @product.Count
            </div>
            <div class="col-3">
            @(@product.Cost * @product.Count)
            </div>
    }
</div>
<hr>
<br>
<h6>Итого: @ViewBag.ResultsCost</h6>


