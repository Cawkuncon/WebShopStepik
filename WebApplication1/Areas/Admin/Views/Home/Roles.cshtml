@using WebApplication1.Areas.Admin.Models;
@model List<Role>

<div class="row">
    <div class="col-3">
        @await Html.PartialAsync("Index")
    </div>
    <div class="col-9">
        <h2>Список ролей</h2>
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-3"><h4>@item.Name</h4></div>
                <div class="col-4"></div>
                    <div class="col-2"><a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="DeleteRole" asp-route-id="@item.Id">Удалить</a></div>
            </div>    
            <br />
    
        }
        <hr />
        <div class="text-center"><a class = "btn btn-primary" asp-area="Admin" asp-controller="Home" asp-action="AddRole">Добавить роль</a></div>
    </div>
</div>
