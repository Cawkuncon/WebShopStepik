@model List<UserRegViewModel>
<div class="row">
    <div class="col-3">
        @await Html.PartialAsync("Index")
    </div>
    <div class="col-9">
        <h2>Список пользователей</h2>
            <div class="row">
                <div class="col-2">
                    Имя
                </div>
                <div class="col-2">
                    Адрес
                </div>
                <div class="col-2">
                    Возраст
                </div>
                <div class="col-2">
                    Номер
                </div>
            </div>
            <hr />
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-2">
                    <a asp-area="Admin" asp-controller="Home" asp-action="UserInfoCheck" asp-route-Id="@item.UserId">@item.Name</a>
                </div> 
                <div class="col-2">
                    @item.Email
                </div>
                <div class="col-2">
                    @item.Age
                </div>
                <div class="col-2">
                    @item.Number
                </div>
            </div>
            <br />
        }
        <div class="row">
            <div class="col-6">
            </div>
            <div class="col-3">
                <a asp-area="Admin" asp-controller="Home" asp-action="AddUser" class="btn btn-success">Добавить пользователя</a>
            </div>
        </div>
    </div>
</div>
