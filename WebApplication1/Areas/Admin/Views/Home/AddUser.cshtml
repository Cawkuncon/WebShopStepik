@model UserReg

<div class="text-center">
    <h2>Регистрация</h2>
    <form asp-area="" asp-controller="Register" asp-action="Register">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Name">Логин</label><br />
            <input asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
            <br />
        <div>
            <label asp-for="Email">Почта</label><br />
            <input asp-for="Email">
            <span asp-validation-for="Email"></span>
        </div>
            <br />
        <div>
            <label asp-for="Age">Возраст</label><br />
            <input asp-for="Age">
            <span asp-validation-for="Age"></span>
        </div>
            <br />
        <div>
            <label asp-for="Number">Телефон</label><br />
            <input asp-for="Number" placeholder="8-800-555-35-35">
            <span asp-validation-for="Number"></span>
        </div>   
            <br />
        <div>
            <label asp-for="Password">Пароль</label><br />
            <input type="password" asp-for="Password">
            <span asp-validation-for="Password"></span>
        </div>    
            <br />
        <div>
            <label asp-for="Password2">Подтверждение пароля</label><br />
            <input type="password" asp-for="Password2">
            <span asp-validation-for="Password2"></span>
        </div>    
        <br />
            <input type="submit" class="btn btn-dark" value="Регистрация нового пользователя"/>
    </form>

</div>
