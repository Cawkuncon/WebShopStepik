@model UserRegViewModel

<div class="text-center">
    <h2>Смена пароля пользователя @Model.Name</h2>
    <form asp-area="Admin" asp-controller="Home" asp-action="EditPassword">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Password">Новый Пароль</label><br />
            <input type="password" asp-for="Password">
            <span asp-validation-for="Password"></span>
        </div>    
            <br />
        <div>
            <label asp-for="Password2">Подтверждение пароля</label><br />
            <input type="password" asp-for="Password2">
            <span asp-validation-for="Password2"></span>
        </div>    
        <br />
            <input type="submit" class="btn btn-dark" value="Обновление пароля" asp-route-Name="@Model.Name"/>
    </form>

</div>